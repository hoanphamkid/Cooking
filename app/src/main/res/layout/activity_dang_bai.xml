<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EC">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageButton
                android:id="@+id/dang_bai_quay_lai"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@android:color/transparent"
                android:contentDescription="@string/profile_back"
                android:src="@drawable/ic_arrow_back"
                android:tint="#FF7A33" />

            <TextView
                android:id="@+id/dang_bai_tieu_de"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:text="@string/create_recipe_title"
                android:textColor="#FF7043"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_burger"
                android:contentDescription="@string/app_name" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dang_bai_ten_mon_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:hint="@string/create_recipe_name_hint"
            app:boxStrokeColor="#FF7A33"
            app:hintTextColor="#FF7A33">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dang_bai_ten_mon_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dang_bai_thoi_gian_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/create_recipe_duration_hint"
            app:boxStrokeColor="#FF7A33"
            app:hintTextColor="#FF7A33">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dang_bai_thoi_gian_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/dang_bai_mo_ta_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="@string/create_recipe_description_hint"
            app:boxStrokeColor="#FF7A33"
            app:hintTextColor="#FF7A33">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/dang_bai_mo_ta_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:maxLines="5" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/dang_bai_danh_gia_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/create_recipe_rating_label"
            android:textColor="#4A4A4A"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RatingBar
            android:id="@+id/dang_bai_danh_gia_ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:layout_marginTop="4dp"
            android:progressTint="#FFB74D"
            android:secondaryProgressTint="#FFB74D"
            android:progressBackgroundTint="#FFE8D9" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/dang_bai_gui_button"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="@string/create_recipe_submit"
            app:backgroundTint="#FF7A33"
            app:icon="@drawable/ic_nav_add"
            app:iconGravity="textStart"
            app:iconPadding="12dp"
            app:iconTint="@android:color/white" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

