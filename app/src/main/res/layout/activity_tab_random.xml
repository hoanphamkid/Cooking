<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF3E0"
    tools:context=".TabRandomActivity">

    <!-- Header / Toolbar -->
    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF7043"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:elevation="4dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_compass"
            app:tint="@android:color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="Hôm nay ăn gì?"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <!-- Nội dung chính -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_action_layout"
        android:layout_below="@id/header_layout"
        android:fillViewport="true"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Lắc nhẹ để tìm món ngon ngẫu nhiên!"
                android:textColor="#757575"
                android:textSize="14sp"
                android:textStyle="italic" />

            <!-- Card hiển thị món ăn -->
            <androidx.cardview.widget.CardView
                android:id="@+id/card_food_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Ảnh món ăn (Placeholder) -->
                    <ImageView
                        android:id="@+id/img_food"
                        android:layout_width="match_parent"
                        android:layout_height="220dp"
                        android:background="#FFCCBC"
                        android:scaleType="centerCrop"
                        android:src="@android:drawable/ic_menu_gallery"
                        android:padding="60dp"
                        app:tint="#FF7043"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:id="@+id/tv_food_name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hãy nhấn nút bên dưới!"
                            android:textColor="#D84315"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:gravity="center"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <!-- Thời gian nấu -->
                            <TextView
                                android:id="@+id/tv_cooking_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-- phút"
                                android:drawablePadding="4dp"
                                android:textColor="#616161"/>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="16dp"
                                android:background="#BDBDBD"
                                android:layout_marginHorizontal="12dp"/>

                            <!-- Độ khó -->
                            <TextView
                                android:id="@+id/tv_difficulty"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Độ khó: --"
                                android:textColor="#616161"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:text="Nhấn nút 'Gợi ý món mới' để bắt đầu tìm kiếm cảm hứng nấu ăn cho bữa nay."
                            android:lineSpacingExtra="4dp"
                            android:textColor="#424242"
                            android:gravity="center"/>

                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Khu vực nút bấm -->
    <LinearLayout
        android:id="@+id/bottom_action_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:elevation="16dp"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btn_random"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Gợi ý món mới"
            android:textSize="18sp"
            android:textStyle="bold"
            app:cornerRadius="30dp"
            android:backgroundTint="#FF5722"
            android:textColor="@android:color/white"/>

        <Button
            android:id="@+id/btn_view_detail"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Xem công thức chi tiết"
            android:textColor="#FF5722"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>