<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:orientation="vertical"
    android:background="@drawable/bg_feedback_card">

    <TextView
        android:id="@+id/quan_tri_ten_mon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/quan_tri_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textColor="#8D8D8D"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/quan_tri_thoi_gian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="#8D8D8D"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/quan_tri_mo_ta"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="#4A4A4A"
        android:textSize="14sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="6dp">

        <RatingBar
            android:id="@+id/quan_tri_danh_gia"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:stepSize="0.5"
            android:progressTint="#FFB74D"
            android:secondaryProgressTint="#FFB74D"
            android:progressBackgroundTint="#FFE8D9" />

        <TextView
            android:id="@+id/quan_tri_gia_tri_danh_gia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textColor="#FF7A33"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:id="@+id/quan_tri_trang_thai"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textColor="#FF7043"
        android:textSize="13sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quan_tri_btn_tu_choi"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/admin_reject"
            android:textColor="#FF3B30"
            app:strokeColor="#FF3B30"
            app:strokeWidth="1dp"
            app:icon="@drawable/ic_profile_pending"
            app:iconTint="#FF3B30"
            app:iconGravity="textStart"
            app:iconPadding="12dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/quan_tri_btn_duyet"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/admin_approve"
            app:backgroundTint="#FF7A33"
            app:icon="@drawable/ic_nav_add"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            app:iconPadding="12dp" />
    </LinearLayout>
</LinearLayout>

