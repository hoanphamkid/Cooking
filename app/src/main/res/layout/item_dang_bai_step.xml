<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item_step_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/create_recipe_step_title"
            android:textColor="#FF7043"
            android:textSize="15sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/item_step_remove_button"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:contentDescription="@string/create_recipe_step_remove"
            android:padding="4dp"
            android:src="@drawable/ic_close_circle"
            android:tint="#FF7A33" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/item_step_desc_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/create_recipe_step_description_hint"
        app:boxStrokeColor="#FF7A33"
        app:hintTextColor="#FF7A33">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_step_desc_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:maxLines="4" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/item_step_image_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:hint="@string/create_recipe_step_image_hint"
        app:boxStrokeColor="#FF7A33"
        app:hintTextColor="#FF7A33">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/item_step_image_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textUri" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>

