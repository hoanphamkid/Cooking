<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="20dp"
        android:paddingTop="12dp"
        android:paddingEnd="20dp"
        android:paddingBottom="8dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pending_reject_dialog_hint"
            android:textColor="#4A4A4A"
            android:textSize="14sp"
            android:layout_marginBottom="8dp" />

        <RadioGroup
            android:id="@+id/reject_reason_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/reject_reason_incomplete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pending_reject_reason_incomplete" />

            <RadioButton
                android:id="@+id/reject_reason_quality"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pending_reject_reason_quality" />

            <RadioButton
                android:id="@+id/reject_reason_duplicate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pending_reject_reason_duplicate" />

            <RadioButton
                android:id="@+id/reject_reason_violation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pending_reject_reason_violation" />

            <RadioButton
                android:id="@+id/reject_reason_other"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/pending_reject_reason_other" />
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/reject_reason_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:boxStrokeColor="#C62828">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/reject_reason_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/pending_reject_reason_other_hint"
                android:inputType="textCapSentences"
                android:maxLines="3" />
        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>
</ScrollView>

