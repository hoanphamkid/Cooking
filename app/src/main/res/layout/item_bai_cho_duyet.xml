<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/bai_cho_hinh_anh"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:contentDescription="@string/create_recipe_image_hint"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_profile_placeholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/bai_cho_ten_mon"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Kem dừa" />

                <TextView
                    android:id="@+id/bai_cho_trang_thai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_status_pending"
                    android:paddingStart="10dp"
                    android:paddingTop="4dp"
                    android:paddingEnd="10dp"
                    android:paddingBottom="4dp"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:textStyle="bold"
                    tools:text="Đang chờ duyệt" />
            </LinearLayout>

            <TextView
                android:id="@+id/bai_cho_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="#8D8D8D"
                android:textSize="12sp"
                tools:text="user1@gmail.com" />

            <TextView
                android:id="@+id/bai_cho_mo_ta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#4A4A4A"
                android:textSize="13sp"
                tools:text="Món kem mát lạnh với topping trái cây." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:contentDescription="@string/pending_item_time"
                    android:src="@drawable/ic_clock"
                    android:tint="#FF7A33" />

                <TextView
                    android:id="@+id/bai_cho_thoi_gian_tao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:textColor="#8D8D8D"
                    android:textSize="12sp"
                    tools:text="Gửi lúc: 23:00:43 14/11/2025" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bai_cho_actions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="end"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bai_cho_duyet_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/pending_action_approve"
                    android:textAllCaps="false"
                    android:textColor="#2E7D32"
                    app:icon="@drawable/ic_check_circle"
                    app:iconPadding="8dp"
                    app:iconTint="#2E7D32" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bai_cho_tu_choi_button"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="@string/pending_action_reject"
                    android:textAllCaps="false"
                    android:textColor="#C62828"
                    app:icon="@drawable/ic_close_circle"
                    app:iconPadding="8dp"
                    app:iconTint="#C62828" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bai_cho_xoa_button"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pending_action_delete"
                    android:textAllCaps="false"
                    android:textColor="#C62828"
                    app:icon="@drawable/ic_delete"
                    app:iconPadding="8dp"
                    app:iconTint="#C62828" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
