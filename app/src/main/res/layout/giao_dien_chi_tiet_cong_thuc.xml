<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/detail_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EC"
    tools:context=".GiaoDienChiTietCongThucActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/detail_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="280dp">

                <ImageView
                    android:id="@+id/detail_hero_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:src="@drawable/ic_burger" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:padding="16dp"
                    android:background="@android:color/transparent">

                    <ImageButton
                        android:id="@+id/detail_back_button"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_circle_translucent"
                        android:contentDescription="@string/profile_back"
                        android:src="@drawable/ic_arrow_back"
                        android:tint="@android:color/white" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:orientation="horizontal" />

                    <ImageButton
                        android:id="@+id/detail_bookmark_button"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_circle_translucent"
                        android:contentDescription="@string/detail_save"
                        android:src="@drawable/ic_profile_saved"
                        android:tint="@android:color/white" />

                    <ImageButton
                        android:id="@+id/detail_menu_button"
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:background="@drawable/bg_circle_translucent"
                        android:contentDescription="@string/detail_more"
                        android:src="@drawable/ic_more"
                        android:tint="@android:color/white" />

                </LinearLayout>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="20dp"
                android:paddingBottom="20dp">

                <TextView
                    android:id="@+id/detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="Khoai tây chiên lắc phô mai" />

                <TextView
                    android:id="@+id/detail_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="#6F6F6F"
                    android:textSize="15sp"
                    tools:text="Hướng dẫn chi tiết giúp bạn chuẩn bị món khoai tây chiên lắc phô mai thơm ngon tại nhà." />

                <TextView
                    android:id="@+id/detail_author_label"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/detail_author_title"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:visibility="gone"
                    tools:visibility="visible" />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/detail_author_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="2dp"
                    tools:visibility="visible">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ImageView
                            android:id="@+id/detail_author_avatar"
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/bg_circle_avatar"
                            android:contentDescription="@string/detail_author_title"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_profile_placeholder" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/detail_author_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/black"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                tools:text="Nguyễn Minh Anh" />

                            <TextView
                                android:id="@+id/detail_author_email"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="2dp"
                                android:textColor="#8D8D8D"
                                android:textSize="13sp"
                                tools:text="minhanh@gmail.com" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/detail_author_profile_button"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/detail_author_view_profile"
                                android:textAllCaps="false"
                                android:textColor="#FF7A33"
                                app:icon="@drawable/ic_profile_history"
                                app:iconPadding="8dp"
                                app:iconTint="#FF7A33" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/detail_author_message_button"
                                style="@style/Widget.MaterialComponents.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/detail_author_message"
                                android:textAllCaps="false"
                                android:textColor="#FF7A33"
                                app:icon="@drawable/ic_chat"
                                app:iconPadding="8dp"
                                app:iconTint="#FF7A33" />
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_clock"
                        android:tint="#FF7A33" />

                    <TextView
                        android:id="@+id/detail_duration"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="#8D8D8D"
                        android:textSize="14sp"
                        tools:text="30 phút" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <RatingBar
                            android:id="@+id/detail_rating_bar"
                            style="@style/Widget.AppCompat.RatingBar.Small"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:stepSize="0.5"
                            android:progressTint="#FFB74D"
                            android:secondaryProgressTint="#FFB74D"
                            android:progressBackgroundTint="#FFE8D9" />

                        <TextView
                            android:id="@+id/detail_rating_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="6dp"
                            android:textColor="#8D8D8D"
                            android:textSize="14sp"
                            tools:text="4.5" />
                    </LinearLayout>

                <LinearLayout
                    android:id="@+id/detail_views_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_view"
                        android:tint="#FF7A33" />

                    <TextView
                        android:id="@+id/detail_view_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:textColor="#8D8D8D"
                        android:textSize="14sp"
                        tools:text="120 lượt xem" />
                </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/detail_actions_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/detail_save_button"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_weight="1"
                        android:text="@string/detail_save"
                        android:textColor="#FF7A33"
                        app:icon="@drawable/ic_profile_saved"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconTint="#FF7A33"
                        app:strokeColor="#FF7A33"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/detail_favorite_button"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_weight="1"
                        android:text="@string/detail_favorite"
                        android:textColor="#FF7A33"
                        app:icon="@drawable/ic_profile_favorite"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconTint="#FF7A33"
                        app:strokeColor="#FF7A33"
                        app:strokeWidth="1dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/detail_user_rating_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/detail_user_rating_title"
                    android:textColor="@android:color/black"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <RatingBar
                    android:id="@+id/detail_user_rating_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:numStars="5"
                    android:stepSize="1.0"
                    android:progressTint="#FFB74D"
                    android:secondaryProgressTint="#FFB74D"
                    android:progressBackgroundTint="#FFE8D9" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/detail_user_rating_button"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="@string/detail_user_rating_button"
                    app:backgroundTint="#FF7A33"
                    app:icon="@drawable/ic_nav_add"
                    app:iconGravity="textStart"
                    app:iconPadding="12dp"
                    app:iconTint="@android:color/white" />

                <TextView
                    android:id="@+id/detail_steps_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/detail_steps_title"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/detail_steps_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_recipe_step" />

                <TextView
                    android:id="@+id/detail_feedback_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="@string/detail_feedback_title"
                    android:textColor="@android:color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/detail_feedback_recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_recipe_feedback" />

                <LinearLayout
                    android:id="@+id/detail_feedback_form"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/bg_feedback_card">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/detail_feedback_add_title"
                        android:textColor="@android:color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <RatingBar
                        android:id="@+id/detail_feedback_rating"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:numStars="5"
                        android:stepSize="0.5"
                        android:progressTint="#FFB74D"
                        android:secondaryProgressTint="#FFB74D"
                        android:progressBackgroundTint="#FFE8D9" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/detail_feedback_input_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:hint="@string/detail_feedback_hint"
                        app:boxStrokeColor="#FF7A33"
                        app:hintTextColor="#FF7A33">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/detail_feedback_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:maxLines="4" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/detail_feedback_submit"
                        style="@style/Widget.MaterialComponents.Button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_gravity="end"
                        android:text="@string/detail_feedback_submit"
                        app:backgroundTint="#FF7A33"
                        app:icon="@drawable/ic_nav_add"
                        app:iconGravity="textStart"
                        app:iconPadding="12dp"
                        app:iconTint="@android:color/white" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

