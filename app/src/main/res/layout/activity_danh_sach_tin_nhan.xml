<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5EC"
    tools:context=".DanhSachTinNhanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FF7A33"
            android:gravity="center_vertical"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/message_list_back_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="@drawable/bg_circle_translucent"
                android:contentDescription="@string/profile_back"
                android:src="@drawable/ic_arrow_back"
                android:tint="@android:color/white" />

            <TextView
                android:id="@+id/message_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="@string/messages_title"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/message_list_recycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingStart="20dp"
            android:paddingTop="12dp"
            android:paddingEnd="20dp"
            android:paddingBottom="16dp"
            tools:listitem="@layout/item_conversation" />

        <TextView
            android:id="@+id/message_list_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="@string/messages_empty"
            android:textColor="#8D8D8D"
            android:textSize="14sp"
            android:visibility="gone"
            tools:visibility="visible" />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

